@model ToDoList.Project.UI.Models.ToDoListListVM

<header class="main-header">
    <nav class="navbar navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a href="../../" class="navbar-brand">My ToDoApp</a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My ToDoLists <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @foreach (var toDoList in Model.ToDoLists.OrderBy(x => x.Name))
                            {
                                <li><a href="@Url.RouteUrl(new { controller = "ToDoList", action = "GetToDoList", parentId = toDoList.Id })">@toDoList.Name</a></li>
                            }
                        </ul>
                    </li>
                    <li>
                        <a class="btn" data-toggle="modal" data-target="#modal-addToDoList">
                            Create ToDoList
                        </a>
                    </li>
                    <li>
                        <a class="btn" data-toggle="modal" data-target="#modal-updateToDoList">
                            Update ToDoList
                        </a>
                    </li>
                    <li>
                        <a class="btn" data-toggle="modal" data-target="#modal-deleteToDoList">
                            Delete ToDoList
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- Navbar Right Menu -->
            <!-- /.navbar-custom-menu -->
        </div>
        <!-- /.container-fluid -->
    </nav>
</header>



