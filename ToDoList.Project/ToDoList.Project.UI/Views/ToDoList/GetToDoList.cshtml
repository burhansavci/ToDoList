@model ToDoList.Project.UI.Models.ToDoListVM
@{
    ViewData["Title"] = "GetToDoList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.ToDoSteps != null && Model.ToDoSteps.Any())
{
    @foreach (var toDoStep in Model.ToDoSteps)
    {
        <div class="callout callout-info">
            <h4>@toDoStep.Title__c</h4>
            <p>
                @toDoStep.Description__c
            </p>
        </div>
    }
}
else
{
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Blank Box</h3>
        </div>
        <div class="box-body">
           You don't have any steps!
        </div>
    </div>
}

